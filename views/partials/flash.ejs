<% if(successMessage && successMessage.length) { %>

  <div class="flash success">
    <%=successMessage%>
  </div>

  <% } %>

    <% if(errorMessage && errorMessage.length) { %>

      <div class="flash error">
        <%=errorMessage%>
      </div>

      <% } %>

        <% if(infoMessage && infoMessage.length) { %>

          <div class="flash info">
            <%=infoMessage%>
          </div>

          <% } %>