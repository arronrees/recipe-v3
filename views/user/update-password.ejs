<% pageTitle='Update Password' %>

  <%- include('../partials/head') %>

    <%- include('../partials/header') %>

      <h2>Update Password</h2>

      <form action="/user/update-password?_method=PUT" method="post" class="update__user__form">
        <input type="hidden" name="id" value="<%=user.id%>">
        <div class="row">
          <label for="currentPassword">Current Password</label>
          <input type="password" name="currentPassword" id="currentPassword" placeholder="Current password">
        </div>
        <div class="row">
          <label for="newPassword">New Password</label>
          <input type="password" name="newPassword" id="newPassword" placeholder="New password">
        </div>
        <div class="row">
          <button type="submit" class="btn btn--teal">Update password</button>
        </div>
      </form>

      <%- include('../partials/footer') %>